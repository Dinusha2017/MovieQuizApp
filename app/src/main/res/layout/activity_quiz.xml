<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.ctse.sliit.moviequizapp.controllers.QuizActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/questionNoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_margin="8dp"
            android:gravity="right"
            android:textSize="22dp" />   <!-- android:text="1" -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_margin="8dp"
            android:text="/10"
            android:textSize="22dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:padding="12dp"
        android:gravity="center"
        android:text="Question"
        android:textSize="25dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.4"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <Button
            android:id="@+id/answer1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:padding="15dp"
            android:layout_margin="15dp"
            android:text="Button"
            android:textSize="15dp"
            android:onClick="onClickAnswer1" />

        <Button
            android:id="@+id/answer2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:padding="15dp"
            android:layout_margin="15dp"
            android:text="Button"
            android:textSize="15dp"
            android:onClick="onClickAnswer2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.4"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <Button
            android:id="@+id/answer3"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:padding="15dp"
            android:layout_margin="15dp"
            android:text="Button"
            android:textSize="15dp"
            android:onClick="onClickAnswer3" />

        <Button
            android:id="@+id/answer4"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:padding="15dp"
            android:layout_margin="15dp"
            android:text="Button"
            android:textSize="15dp"
            android:onClick="onClickAnswer4" />
    </LinearLayout>

    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:layout_margin="20dp"
        android:layout_gravity="right"
        android:text="Next"
        android:onClick="onClickNext" />    <!-- TextView -->
</LinearLayout>
